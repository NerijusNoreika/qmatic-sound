{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "1.0",
    "author": "Nerijus Noreika",
    "manifest_version": 2,
    "default_locale": "lt",
    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/workstationterminal/*", "https://*/workstationterminal/*"],
            "css": ["css/main.css", "css/bootstrap.min.css"],
            "js": ["content.js"],
            "run_at": "document_end"

        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "QMATIC Orchestra sound"
    },
    "web_accessible_resources": [
        "sounds/*",
        "css/*",
        "localization.js",
        "popup.js"
    ],
    "permissions": [
        "storage"
    ]
}